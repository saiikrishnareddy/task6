-- Query 1: Subquery inside IN


SELECT 
    customer_name
FROM 
    Customers
WHERE 
    customer_id IN (SELECT customer_id FROM Orders WHERE amount > 150);



-- Query 2: Subquery inside EXISTS


SELECT 
    customer_name
FROM 
    Customers c
WHERE 
    EXISTS (SELECT 1 FROM Orders o WHERE o.customer_id = c.customer_id AND o.amount > 200);